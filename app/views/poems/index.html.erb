<div class="container">
  <div class="row">
    <h1 class="text-center">
      The Stream
    </h1>
  </div>
</div>

<hr>

<% if current_user.present? %>
<div class="container">
  <div class="row">
    <h2 class="text-center">
      Join the stream!
    </h2>

    <form action="/insert_poem" method="post" class="form-horizontal">
      <div class="form-group">
        <label for="title_box" class="col-sm-4 control-label">
          What do you want your Poem to be titled?
        </label>

        <div class="col-sm-8">
          <input type="text" id="title_box" name="query_title" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <label for="poem_box" class="col-sm-4 control-label">
          What do you want your Poem to be about?
        </label>

        <div class="col-sm-8">
          <textarea id="poem_box" name="query_poem" rows="2" placeholder="How are you feeling today?" class="form-control"></textarea>
        </div>
      </div>

      <div class="form-group">
        <label for="title_box" class="col-sm-4 control-label">
          How cursed do you want your poem to be? (0 to 1 for more cursed but creative)
        </label>

        <div class="col-sm-8">
          <input type="text" id="title_box" name="query_temp" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button class="btn btn-primary">
            Create poem
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
<% else %>
<div class="container">
  <div class="row">
    <h2 class="text-center">
      You need to be signed in as a user to add to the stream!
    </h2>
  </div>
</div>
<% end %>

<hr>
<div class="container">
  <div class="row">
    <table class="table table-striped table-bordered">
      <tr>

        <th>
          Title
        </th>

        <th>
          Poem
        </th>

        <th>
          User
        </th>

      </tr>

      <% @list_of_poems.each do |a_poem| %>
      <tr>

        <td>
          <%= a_poem.title %>
        </td>

        <td>
          <%= a_poem.poem %>
        </td>

        <td>
          <%= a_poem.user_id %>
        </td>

        <td>
          <a href="/poems/<%= a_poem.id %>" class="btn btn-info">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
